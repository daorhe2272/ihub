  header
    #trigger2(style="display:none;")= trigger2
    .header_wrapper
      #header_logo
        a(href='/') idea-hub.net
        //- img(src="/images/logo01.png")
      #header_menu
        if !userId
          .menu_item#aboutInHeader
            a(href="/about") About
          .menu_item#logIn
            button Log in
            .dropdownContent
              button(onclick="openSignin()") Log in
              button(onclick="openRegister()") Register
          .menu_item#mobileMenu
            button
              i.fas.fa-bars
            .dropdownContent#layoutMenuDropdown
              button(onclick="location.href='/'") <i class="fas fa-share-square"></i> Share
              button(onclick="location.href='/discussions'") <i class="fas fa-exclamation-triangle"></i> Discussions
              button(onclick="location.href='/partner-up'") <i class="fas fa-exclamation-triangle"></i> Partner Up
              button(onclick="location.href='events'") <i class="fas fa-exclamation-triangle"></i> Events
              button(onclick="location.href='/rankings'") <i class="fas fa-exclamation-triangle"></i> Rankings
              button(onclick="location.href='/about'") <i class="fas fa-question-circle"></i> About
        if userId
          .menu_item
            button
              i.fas.fa-bell
          .menu_item#myAccount(name=`${userId}`)
            button
              i.fas.fa-user
            .dropdownContent#layoutProfileDropdown
              button(onclick=`location.href="/user/${userId}";`) My Profile
              button(onclick=`location.href="/user-collection";`) My Collection
              button(onclick="location.href='/logout';") Log out
          .menu_item
            button
              i.fas.fa-bars
            .dropdownContent#layoutMenuDropdown
              button(onclick="location.href='/'") <i class="fas fa-share-square"></i> Share
              button(onclick="location.href='/discussions'") <i class="fas fa-exclamation-triangle"></i> Discussions
              button(onclick="location.href='/partner-up'") <i class="fas fa-exclamation-triangle"></i> Partner Up
