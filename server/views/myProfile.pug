extends layout

block content
  .bodyWrapper
    .profileWrapper
      .profileHeader
        .profileUserHeader
          .profileUserIntro
            i.fas.fa-user-circle
            b#profileUser #{userFullName}
          if userId === visitorId
            .profileDescriptionContainer
              b#profileDescription About me
              #profileDescriptionContents(onclick=`editProfileDescription("${userId}")`) #{userDescription}
              .updateButtons#aboutMeUpdateButtons
          if userId !== visitorId
            .profileDescriptionContainer
              b#profileDescription About #{userName}:
              #profileDescriptionContents This user has not added a description yet
      .profileInfo
        b.profileInfoTitle General Information
        ul.profileInfoContents
          li.companyName
            .extraContainer
              b Company name
              if userId === visitorId
                if userCompany == ""
                  span(id="companyName" onclick="editGeneralProfileInfo('companyName')") Add your company's name
                if userCompany != ""
                  span(id="companyName" onclick="editGeneralProfileInfo('companyName')") #{userCompany}
              if userId !== visitorId
                if userCompany == ""
                  span Information not available
                if userCompany != ""
                  span #{userCompany}
          li.Website
            .extraContainer
              b Website
              if userId === visitorId
                if userWebsite == ""
                  span(id="companyWebsite" onclick="editGeneralProfileInfo('companyWebsite')") Add your company's website
                if userWebsite != ""
                  span(id="companyWebsite" onclick="editGeneralProfileInfo('companyWebsite')") #{userWebsite}
              if userId !== visitorId
                if userWebsite == ""
                  span Information not available
                if userWebsite != ""
                  span #{userWebsite}
          li.LinkedIn
            .extraContainer
              b External Profile
              if userId === visitorId
                if userLinkedIn == ""
                  span(id="externalProfile" onclick="editGeneralProfileInfo('externalProfile')") Add an external profile (e.g. LinkedIn)
                if userLinkedIn != ""
                  span(id="externalProfile" onclick="editGeneralProfileInfo('externalProfile')") #{userLinkedIn}
              if userId !== visitorId
                if userLinkedIn == ""
                  span Information not available
                if userLinkedIn != ""
                  span #{userLinkedIn}
          li.profileLikes
            .extraContainer
              b Likes received
              span 0 likes received
          li.profileComments
            .extraContainer
              b Comments received
              span 0 comments received
        if userId === visitorId
          .updateButtons#profileInfoUpdateButtons
            button(class="submitbtn" onclick="submitProfileInfoChanges()")
              b Update changes
            button(class="darkclosebtn" onclick="cancelProfileInfoChanges()")
              b Cancel
      if userId === visitorId
        .profileSettings
          b.profileSettingsTitle Profile Settings
          ul.profileSettingsContents
            li.profileContact
              .extraContainer
                b Contact Email:
                span #{userEmail}
            li.profileChangeContact
              .extraContainer
                b Change Email
                span(style="color:grey;") Change your contact e-mail
            li.profileChangeName
              .extraContainer
                b Change Name
                span #{userFullName}
            li.profileChangePassword
              .extraContainer
                b Change Password
                span(style="color:grey;") Change your log-in password
            li.profileDeleteAccount
              .extraContainer
                b Delete Account
                span(style="color:grey;") Delete your account and all of your personal data permanently
      .profileContent2
        b.activityTitle My Activity
        .profileActivityContents
          .noProfileActivity You do not have any activity to show
